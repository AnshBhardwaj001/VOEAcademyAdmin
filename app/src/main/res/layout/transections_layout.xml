<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/notification_cardview"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/payment_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_black"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:text="payment ID"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/userID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="User IO"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="User Name"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/userMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="XXXXXXXXXX"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Email"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Amount : 100000"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Teacher : Teacher Name"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/no_of_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Classes Booked : XX"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/selected_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Subject : Subject"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/selected_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Class : X"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="TimeStamp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/isCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:fontFamily="@font/poppins_black"
                android:paddingBottom="10sp"
                android:text="Checking"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/completeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:text="Completed"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>